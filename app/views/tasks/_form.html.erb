<%= form_for @task do |f| %>

  <div class="form-group col-lg-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group col-lg-4">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-group col-lg-4">

  <%= f.label :complete %>
  <%= f.check_box :completed, as: :boolean %>

    </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
